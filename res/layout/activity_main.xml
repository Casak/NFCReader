<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context="com.example.hello.BillingActivity" >

<!--     <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >  -->
   
         <include
        android:id="@+id/incFile"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   layout="@layout/titlebar" />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:orientation="horizontal">
                <LinearLayout 
                     android:background="#786f68"
                      android:alpha="0.7"
                      android:layout_width="0dp"
                    android:layout_weight="1"
                   
                     android:layout_margin="1dp"
                     android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    >
                
                <TextView 
                    android:id="@+id/txtBillLanding"
                    android:layout_width="fill_parent"
                    android:padding="10dp"
                     android:layout_margin="1dp"
                     android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:text="SCAN TAG"
                    android:clickable="true"
                    android:onClick="readtag"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:alpha="1"
                    android:textSize="22sp"/>
                </LinearLayout>
                 <LinearLayout 
                     android:background="#786f68"
                      android:alpha="0.7"
                      android:layout_width="0dp"
                    android:layout_weight="1"
                     android:visibility="gone"
                     android:layout_margin="1dp"
                     android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    >
                 <TextView 
                    android:id="@+id/txtUnlodingReciept"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_margin="1dp"
                     android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                  
                    android:text="READ FILE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                     android:clickable="true"
                    android:onClick="viewfile"
                     android:alpha="1"
                    android:textSize="22sp"/>
                 </LinearLayout>
            </LinearLayout>
            
            
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:orientation="horizontal">
                  <LinearLayout 
                     android:background="#786f68"
                      android:alpha="0.7"
                      android:layout_width="0dp"
                    android:layout_weight="1"
                  
                     android:layout_margin="1dp"
                     android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    >
                <TextView 
                    android:id="@+id/txtwashoutReciept"
                    android:layout_width="fill_parent"
                   
                    android:padding="10dp"
                     android:layout_margin="1dp"
                      android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:text="SHARE FILE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                     android:clickable="true"
                    android:onClick="sendfile"
                    android:alpha="1"
                    android:textSize="22sp"/>
                </LinearLayout>
                 <LinearLayout 
                     android:background="#786f68"
                      android:alpha="0.7"
                      android:layout_width="0dp"
                    android:layout_weight="1"
                     android:visibility="gone"
                     android:layout_margin="1dp"
                     android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    >
                 <TextView 
                    android:id="@+id/txtTripSheet"
                    android:layout_width="fill_parent"
                    
                    android:clickable="true"
                    android:onClick="aboutus"
                     android:layout_margin="1dp"
                      android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:text="ABOUT US"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                     android:alpha="1"
                    android:textSize="22sp"/>
                 </LinearLayout>
            
            
            
            
            
           
            
            </LinearLayout>
            
        <LinearLayout 
            android:layout_width="fill_parent"
             android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/SendMail"
                android:layout_width="0dp"
                android:layout_weight="1"
                 android:textColor="#FFFFFF"
                   
                       android:layout_margin="1dp"
                    android:gravity="center"
                     android:layout_gravity="center"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:onClick="sendDoc"
                     android:alpha="1"
                    android:textSize="22sp"
                android:layout_height="wrap_content"
                android:text="Send Doc"/>
             <TextView 
                 android:id="@+id/SendMailSl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
               
                android:layout_margin="1dp"
                android:gravity="center"
                 android:layout_gravity="center"
                android:textStyle="bold"
                android:alpha="1"
                android:textSize="22sp"
                android:clickable="true"
                    android:onClick="sendMailSilent"
                android:layout_height="wrap_content"
                android:text="121589"/>
        </LinearLayout>
        
    </LinearLayout>
<!--    </ScrollView>-->
  
</LinearLayout>
